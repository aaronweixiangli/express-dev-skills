<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      form * {
        margin-top: 5px;
      }
      input[name="name"] {
        height: 50px;
        width: 300px;
        font-size: 30px;
      }
      textarea[name="detail"] {
        height: 200px;
        width: 500px;
        font-size: 30px;
        word-wrap: break-word;
        word-break: break-all;
      }
      button {
        height: 50px;
        width: 100px;
      }
      label {
        display: flex;
        align-items: center;
        justify-content: center;
      }
      input {
        margin-top: 30px;
        height: 20px;
        width: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/header') %>
    <section>
        <a href="/">Home</a> |
        <a href="/skills">Developer skills list</a>
    </section>
    <h1><%= title %></h1>
    <form action="/skills/<%= skill.id %>?_method=PUT" method="POST">
        <label><input type="text" name="name" value = <%= skill.name %>>Name</label>
        <label><textarea name="detail" cols="30" rows="10"><%= skill.detail %></textarea>Description</label>
        <label>
            <input type="checkbox" name="learned" <%= skill.learned ? 'checked' : '' %>>
            Learned
          </label>
        <label><button type="submit">Edit skill</button></label>
    </form>

    <%- include('../partials/footer') %>
  </body>
</html>
