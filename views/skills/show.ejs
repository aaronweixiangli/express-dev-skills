<!DOCTYPE html>
<html>
  <head>
    <title><%= skill.name %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        body {
            justify-content: flex-start;
        }
        p {
            width: 50%;
            line-height: 200%;
            text-align: center;
        }
    </style>
  </head>
  <body>
    <%- include('../partials/header') %>
    <section>
        <a href="/">Home</a> |
        <a href="/skills">Developer skills list</a>
    </section>
    <h1><%= skill.name %></h1>
    <h3>Description</h3>
    <p><%= skill.detail %></p>
    <h3>Status</h3>
    <p><%= skill.learned ? 'Learned' : 'Plan to learn' %></p>
    <a href="/skills/<%= skill.id %>/edit">Edit skill</a>
    <%- include('../partials/footer') %>
  </body>
</html>
